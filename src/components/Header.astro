---
import logo from '../img/Logo.png';

const patname = Astro.url.pathname;

---
<header class="header">
    <div class="contenedor barra">
        <a href="/">
            <img src={logo} alt="imagen logotivo" draggable="false">
        </a>

        <nav class="navegacion">
            <a href="/" class={patname === '/' ? 'active' : ''}>Inicio</a>

            <a href="/about" class={patname === '/about' ? 'active' : ''}>Acerca</a>

            <a href="/blog" class={patname === '/blog' ? 'active' : ''}>Blog</a>

            <a href="/store" class={patname === '/store' ? 'active' : ''}>Tienda</a>
        </nav>

    </div>
</header>

<style>
.header {
    background-image: linear-gradient(to right, rgba(255, 255, 255, 0), rgb(0 0 0 / .7)), url(../img/header.jpg);
    padding: 5rem 0;
    background-position: center;
    background-size: cover;
}
.header img {
    width: 30rem;
}

.barra {
    display: flex;
    flex-direction: column;
    align-items: center;
}
@media (min-width: 768px) {
    .barra {
        flex-direction: row;
        justify-content: space-between;
    }
}

.navegacion {
    margin-top: 5rem;
    display: flex;
    align-items: center;
    gap: 2rem;
}
@media (min-width: 768px) {
    .navegacion {
        margin: 0;
    }
}
.navegacion a {
    color: var(--white);
    text-decoration: none;
    font-size: 1.4rem;
    font-weight: 700;
    text-transform: uppercase;
    padding: .5rem;
    transition-property: background-color;
    transition-duration: 300ms;
    border-radius: .5rem;
}
.navegacion a:hover,
.active {
    background-color: var(--primary);
}

</style>